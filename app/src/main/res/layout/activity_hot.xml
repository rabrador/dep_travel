<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:layout_marginLeft="190dp">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/image_hot_c"
            android:layout_weight="1"
            android:id="@+id/imgBtnC" />

        <TextView
            android:text="Bike趴趴造"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:id="@+id/textView9"
            android:layout_weight="1"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/image_hot_d"
            android:layout_weight="1"
            android:id="@+id/imgBtnD" />

        <TextView
            android:text="屏東景點"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:id="@+id/textViewD"
            android:layout_weight="1"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:layout_marginLeft="20dp">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:background="@drawable/image_hot_a"
            android:id="@+id/imgBtnA"
            android:layout_weight="1"
            android:alpha="10" />

        <TextView
            android:text="宗教文化"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:id="@+id/textViewA"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/image_hot_b"
            android:id="@+id/imgBtnB"
            android:layout_weight="1"/>

        <TextView
            android:text="自然生態"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:id="@+id/textViewB"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>
