<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.han.newtravel30.HotList.ListContentActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:scaleType="fitXY"
            android:id="@+id/imageContent"
            android:layout_weight="1"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:weightSum="1">
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:layout_marginLeft="90dp"
                android:layout_centerInParent="true"
                android:background="@drawable/image_map_hot"
                android:id="@+id/imageButtonMap" />

            <TextView
                android:text="景點導航"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="-65dp"
                android:layout_marginTop="35dp"
                android:id="@+id/textView2"
                android:layout_weight="0.12"
                android:textSize="15sp" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/image_like_hot"
                android:id="@+id/imageButtonFBLike" />
            <TextView
                android:text="定位打卡"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="-65dp"
                android:layout_marginTop="35dp"
                android:id="@+id/textView"
                android:layout_weight="0.12"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/textContent"
            android:scrollbars = "vertical"
            android:layout_weight="1"/>
    </LinearLayout>


</RelativeLayout>
